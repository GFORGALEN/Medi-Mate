<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.friedchicken.mapper.ProductMapper">
    <update id="updateProductById">
        update supplement
        <set>
            <if test="productId != null">
                product_id = #{productId},
            </if>
            <if test="productName != null">
                product_name = #{productName},
            </if>
            <if test="productPrice != null">
                product_price = #{productPrice},
            </if>
            <if test="manufacturerName != null">
                manufacturer_name = #{manufacturerName},
            </if>
            <if test="generalInformation != null">
                general_information = #{generalInformation},
            </if>
            <if test="warnings != null">
                warnings = #{warnings},
            </if>
            <if test="commonUse != null">
                common_use = #{commonUse},
            </if>
            <if test="ingredients != null">
                ingredients = #{ingredients},
            </if>
            <if test="directions != null">
                directions = #{directions},
            </if>
            <if test="imageSrc != null">
                image_src = #{imageSrc},
            </if>
            <if test="summary != null">
                summary = #{summary},
            </if>
        </set>
        where product_id = #{productId};
    </update>
    <select id="getProducts" resultType="com.friedchicken.pojo.vo.Supplement.SupplementListVO">
        SELECT *
        from supplement
        <where>
            <if test="productName != null and productName != ''">
                product_name like concat('%',#{productName},'%')
            </if>
            <if test="manufacture != null and manufacture != ''">
                manufacturer_name like concat('%',#{manufacture},'%')
            </if>
        </where>
    </select>
    <select id="getProductById" resultType="com.friedchicken.pojo.vo.Supplement.SupplementDetailVO">
        select *
        from supplement
        <where>
            product_id = #{productId}
        </where>
    </select>
</mapper>